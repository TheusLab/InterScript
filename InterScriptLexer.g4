lexer grammar InterScriptLexer;

LET: 'let';
FUNCTION: 'function';
IF: 'if';
ELSE: 'else';
FOR: 'for';
RETURN: 'return';
TRUE: 'true';
FALSE: 'false';
COLON: ':';
SEMICOLON: ';';
COMMA: ',';
LPAREN: '(';
RPAREN: ')';
LBRACE: '{';
RBRACE: '}';
ASSIGN: '=';
PLUS: '+';
MINUS: '-';
STAR: '*';
SLASH: '/';
GT: '>';
LT: '<';
EQ: '==';
NEQ: '!=';
AND: '&&';
OR: '||';
NOT: '!';
INT: [0-9]+;
STRING: '"' .*? '"';
IDENTIFIER: [a-zA-Z_][a-zA-Z_0-9]*;
WS: [ \t\r\n]+ -> skip;
